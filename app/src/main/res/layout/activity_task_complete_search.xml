<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_task_complete_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/z_color_background"
    tools:context="net.zoneland.x.bpm.mobile.v1.zoneXBPM.app.o2.process.TaskCompletedSearchActivity">
    <com.google.android.material.appbar.AppBarLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/app_bar_task_completed_search"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:theme="@style/XBPMTheme.AppBarOverlay">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_task_completed_search_top_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/z_color_primary"
            app:popupTheme="@style/XBPMTheme.PopupOverlay"
            app:layout_scrollFlags="scroll|snap|enterAlways" >
            <LinearLayout
                android:id="@+id/ll_search_search"
                android:layout_width="250dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:background="@drawable/background_white_radius"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/spacing_small"
                    android:src="@mipmap/icon_main_search"
                    android:contentDescription="@string/search_taskcompleted" />
                <net.zoneland.x.bpm.mobile.v1.zoneXBPM.widgets.ClearTextEdit
                    android:id="@+id/edit_task_completed_search_key"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:layout_marginStart="@dimen/spacing_tiny"
                    android:imeOptions="actionSearch"
                    android:inputType="text"
                    android:hint="@string/activity_task_completed_search_hint"
                    android:textColorHint="@color/z_color_text_hint"
                    android:textColor="@color/z_color_text_primary"
                    android:textSize="@dimen/font_normal" />
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <net.zoneland.x.bpm.mobile.v1.zoneXBPM.widgets.RecyclerViewSwipeRefreshLayout
        android:id="@+id/refresh_task_completed_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/app_bar_task_completed_search">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_task_completed_search_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/spacing_small" />
    </net.zoneland.x.bpm.mobile.v1.zoneXBPM.widgets.RecyclerViewSwipeRefreshLayout>
    <!--    搜索结果为空 -->
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_search_no_results"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_bar_task_completed_search"
        android:orientation="vertical">
        <ImageView
            android:layout_width="260dp"
            android:layout_height="163dp"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/search_wu"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_small"
            android:text="@string/search_no_result"
            android:textColor="#B3B3B3"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>


</RelativeLayout>
