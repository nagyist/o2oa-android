<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/spacing_small"
    android:layout_marginStart="@dimen/spacing_normal"
    android:layout_marginEnd="@dimen/spacing_normal"
    android:paddingBottom="@dimen/spacing_small"
    android:background="@drawable/background_white_radius_10">



    <TextView
        android:id="@+id/tv_search_result_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="250dp"
        android:layout_marginStart="@dimen/spacing_normal"
        android:layout_marginTop="@dimen/spacing_twenty"
        tools:text="这里是结果标题"
        android:textSize="@dimen/font_large"
        android:textColor="@color/z_color_text_primary_dark"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/tv_search_result_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="2021-5-19"
        android:textColor="@color/z_color_text_hint"
        android:textSize="@dimen/font_small"
        app:layout_constraintTop_toTopOf="@+id/tv_search_result_title"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/spacing_normal"
        />

    <TextView
        android:id="@+id/tv_search_result_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="关于O2OA宣传推广的事项进行讨论，并配合研发中心做好宣传设计及成品设计并配合研发中心做好宣传设计及成品设计并配合研发中心做好宣传设计及成品设计……"
        android:textColor="@color/z_color_text_primary"
        android:textSize="@dimen/font_normal"
        app:layout_constraintTop_toBottomOf="@+id/tv_search_result_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:maxLines="2"
        android:ellipsize="end"
        android:paddingStart="@dimen/spacing_normal"
        android:paddingEnd="@dimen/spacing_normal"
        android:layout_marginTop="@dimen/spacing_small"
        />
    <View
        app:layout_constraintTop_toBottomOf="@+id/tv_search_result_summary"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginStart="@dimen/spacing_normal"
        android:layout_marginEnd="@dimen/spacing_normal"
        android:layout_marginTop="@dimen/spacing_small"
        android:background="@color/z_color_split_meeting_line" />

    <TextView
        android:id="@+id/tv_search_result_unit_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="部门"
        android:textColor="@color/z_color_text_hint"
        android:textSize="@dimen/font_small"
        app:layout_constraintTop_toBottomOf="@+id/tv_search_result_summary"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/spacing_normal"
        android:layout_marginTop="@dimen/spacing_twenty"
        />


    <TextView
        android:id="@+id/tv_search_result_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="楼国栋"
        android:textColor="@color/z_color_text_hint"
        android:textSize="@dimen/font_small"
        app:layout_constraintTop_toTopOf="@+id/tv_search_result_unit_name"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/spacing_small"
        />
</androidx.constraintlayout.widget.ConstraintLayout>